<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#C80D0D"
    tools:context=".Dessert">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="#C80D0D"
        android:orientation="horizontal">

        <!--McDelivery Image-->
        <Button
            android:id="@+id/mcdelivery"
            android:layout_width="203dp"
            android:layout_height="match_parent"
            android:background="@drawable/mcdodelivery" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--Login Button-->
            <TextView
                android:id="@+id/txtUser"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:background="@drawable/my_button_bg"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/my_button_bg"
                android:text="PROFILE"
                android:textColor="@android:color/background_light"
                android:textSize="14sp" />
            <!--Register Button-->
            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/my_button_bg"
                android:text="ORDER HISTORY"
                android:textColor="@android:color/background_light" />
        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:fontFamily="sans-serif-condensed"
        android:text="DESSERTS"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="36sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="26dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_dark"
            app:srcCompat="@drawable/applepie" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/apple"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:text="Apple Pie"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/my_button_bg2"
                android:text="Order"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    //seekbar===============================================================================

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="104dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_dark"
            app:srcCompat="@drawable/caramel" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/caramel"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:text="Caramel Sundae"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/order2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/my_button_bg2"
                android:text="Order"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    //seekbar===============================================================================

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="13dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_dark"
            app:srcCompat="@drawable/floats" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/floats"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:text="McFloat"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/order3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/my_button_bg2"
                android:text="Order"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    //seekbar===============================================================================

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="13dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_dark"
            app:srcCompat="@drawable/hotfudge" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fudge"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:text="Sundae"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/order4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/my_button_bg2"
                android:text="Order"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    //seekbar===============================================================================

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="28dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_dark"
            app:srcCompat="@drawable/flurry" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/flurry"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:text="McFlurry"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/order5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/my_button_bg2"
                android:text="Order"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    //seekbar===============================================================================

</LinearLayout>